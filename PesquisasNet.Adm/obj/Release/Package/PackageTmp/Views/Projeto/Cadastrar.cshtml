
@{
    ViewBag.Title = "Criar Novo Projeto";
    Layout = "~/Views/Shared/LayoutAdm.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Novo Projeto</h3>
    </div>

    <form action="~/Projeto/Cadastrar" method="post" class="form-horizontal" role="form">

        <div class="panel-body">

            <div class="form-group">
                <label for="Cidade" class="col-sm-2 control-label">Ativo</label>
                <div class="col-sm-4">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: WALDO RIO DE JANEIRO">
                </div>
            </div>

            <div class="form-group">
                <label for="Resumo" class="col-sm-2 control-label">Restrição de participantes(ABEP)</label>
                <div class="col-sm-6">
                    <textarea name="Descricao" rows="10" class="form-control" maxlength="400" placeholder="1 ANO SEM TER PARTICIPADO E NO MAXIMO DUAS PARTICIPAÇÕES. NÃO PODEM TRABALHAR COM ÁREAS DO FILTRO BÁSICO."></textarea>
                </div>
            </div>

            @*<div class="form-group">
                <label for="Descricao" class="col-sm-2 control-label">Descrição</label>
                <div class="col-sm-6">
                    <textarea name="Descricao" rows="10" class="form-control" maxlength="400"></textarea>
                </div>
            </div>*@

            <div class="form-group">
                <label for="Cidade" class="col-sm-2 control-label">Cidade</label>
                <div class="col-sm-4">
                    <select class="form-control">
                        <option value="RJ">Rio de Janeiro</option>
                        <option value="SP">São Paulo</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" />
                            Eu aceito os termos e condições.
                        </label>
                    </div>
                </div>
            </div>


        </div>

        <div class="panel-footer" style="overflow:hidden;text-align:right;">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success btn-sm">Cadastrar</button>
                    <a href="~/Projeto" class="btn btn-default btn-sm">Cancelar</a>
                </div>
            </div>
        </div>

    </form>
</div>