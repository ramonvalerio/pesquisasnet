<div class="row">
    <div class="col-md-12">
        <div class="btn-group">
            <a href="~/Projeto/Cadastrar" class="btn btn-primary">Novo Projeto</a>
        </div>

        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Ações
