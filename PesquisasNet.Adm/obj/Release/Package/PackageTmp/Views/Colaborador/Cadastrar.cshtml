
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/LayoutAdm.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Criar Nova Pesquisa</h3>
    </div>

    <form action="~/Colaborador/Cadastrar" method="post" class="form-horizontal" role="form">

        <div class="panel-body">

            <div class="form-group">
                <label for="Cidade" class="col-sm-2 control-label">Ativo</label>
                <div class="col-sm-4">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Código</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 6126">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: Priscila">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Sobrenome</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: Pereira da Silva">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Apelido</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: Priscila">
                </div>
            </div>

            <div class="form-group">
                <label for="Resumo" class="col-sm-2 control-label">Endereço</label>
                <div class="col-sm-4">
                    <textarea name="Resumo" rows="2" class="form-control" maxlength="80" placeholder="Ex.: Av. Nossa Senhora de Copacabana, 395, ap.1201, Copacabana, RJ"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Data de Nascimento</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 27/11/1981">
                </div>
            </div>

            <div class="form-group">
                <label for="Texto" class="col-sm-2 control-label">Sexo</label>
                <div class="col-sm-4">
                    <div class="radio-inline">
                        <label>
                            <input id="Masculino" name="Sexo" type="radio" value="M" />
                            Masculino
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input id="Feminino" name="Sexo" type="radio" value="F" checked="checked" />
                            Feminino
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">RG</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 127.66.835-8">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">CPF</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 095.71.22.37-35">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">E-mail</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: pripesa@gmail.com">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Telefone</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: (21)3970-5072">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Banco</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: Santander">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Agência</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 4697">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Conta Corrente</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 010015335-8">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Nome do Favorecido</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: Priscila Pereira dos Santos">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">PIS</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder=" Ex.: xxxxxxxx">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">INSS</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder=" Ex.: xxxxxxxx">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Nome do Login</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Ex.: priscilapereira.novoconceito">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Senha</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="No mínimo 6 caracteres, e no máximo 8. Com pelomenos um número e um caracter especial.">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Confirmar Senha</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Digite a senha igual ao campo Senha.">
                </div>
            </div>

            <div class="form-group">
                <label for="Cidade" class="col-sm-2 control-label">Cidade</label>
                <div class="col-sm-4">
                    <select class="form-control">
                        <option value="RJ">Rio de Janeiro</option>
                        <option value="SP">São Paulo</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" />
                            Eu aceito os termos e condições.
                        </label>
                    </div>
                </div>
            </div>

        </div>

        <div class="panel-footer" style="overflow:hidden;text-align:right;">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success btn-sm">Cadastrar</button>
                    <a href="~/Colaborador" class="btn btn-default btn-sm">Cancelar</a>
                </div>
            </div>
        </div>

    </form>
</div>