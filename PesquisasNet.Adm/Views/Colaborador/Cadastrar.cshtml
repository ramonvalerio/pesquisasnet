
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/LayoutAdm.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Criar Nova Pesquisa</h3>
    </div>

    <form action="~/Colaborador/Cadastrar" method="post" class="form-horizontal" role="form">

        <div class="panel-body">

            <div class="form-group">
                <label for="Cidade" class="col-sm-2 control-label">Ativo</label>
                <div class="col-sm-4">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Nome Completo</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Enter título">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Data de Nascimento</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Enter título">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">RG</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Enter título">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">CPF</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Enter título">
                </div>
            </div>

            <div class="form-group">
                <label for="Texto" class="col-sm-2 control-label">Sexo</label>
                <div class="col-sm-4">
                    <div class="radio-inline">
                        <label>
                            <input id="Masculino" name="Sexo" type="radio" value="M" />
                            Masculino
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input id="Feminino" name="Sexo" type="radio" value="F" />
                            Feminino
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Nome do Login</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Enter título">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Senha</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Enter título">
                </div>
            </div>

            <div class="form-group">
                <label for="Titulo" class="col-sm-2 control-label">Confirmar Senha</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="Titulo" placeholder="Enter título">
                </div>
            </div>

            <div class="form-group">
                <label for="Cidade" class="col-sm-2 control-label">Cidade</label>
                <div class="col-sm-4">
                    <select class="form-control">
                        <option value="RJ">Rio de Janeiro</option>
                        <option value="SP">São Paulo</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" />
                            Eu aceito os termos e condições.
                        </label>
                    </div>
                </div>
            </div>

        </div>

        <div class="panel-footer" style="overflow:hidden;text-align:right;">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success btn-sm">Cadastrar</button>
                    <a href="~/Colaborador" class="btn btn-default btn-sm">Cancelar</a>
                </div>
            </div>
        </div>

    </form>
</div>