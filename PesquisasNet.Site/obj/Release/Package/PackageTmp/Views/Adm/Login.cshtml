<body>

    <div class="container">

        <form class="form-signin" action="~/Adm/Login" method="post">
            <h2 class="form-signin-heading">
                <img src="~/img/logopn.png">
            </h2>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" name="chave" class="form-control" placeholder="Chave" required autofocus>
            <label for="inputPassword" class="sr-only">Senha</label>
            <input type="password" id="inputPassword" name="senha" class="form-control" placeholder="Password" required>
            @*<div class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>*@
            <button class="btn btn-lg btn-primary btn-block" type="submit">Autenticar</button>
        </form>

