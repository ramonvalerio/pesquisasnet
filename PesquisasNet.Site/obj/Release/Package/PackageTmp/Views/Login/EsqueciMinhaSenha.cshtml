@{
    ViewBag.Title = "Esqueceu sua senha?";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

<div class="destaquelogin">
    <img src="http://file.pesquisasnet.com/img/site/destaquelogin.jpg">
</div>
<div class="cadastro">
    <h2>Alterar a sua senha é fácil.</h2>
    <p>Insira seu endereço de e-mail para receber instruções.</p>
    <form action="~/Login/VerifiqueSeuEmail">
        <ul>
            <li>
                <span>* Nome obrigatório</span>
                <input type="text" name="email" class="inputcadastro90" placeholder="E-mail" />
            </li>
            <li>
                <button type="submit" class="btn-cadastrar">Continuar</button>
            </li>
        </ul>
    </form>
</div>
<div class="clear"></div>
