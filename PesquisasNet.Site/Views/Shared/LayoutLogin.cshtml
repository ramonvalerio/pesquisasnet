@if (Session["Usuario"] != null)
{
    Response.Redirect("~/Pesquisa");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>PesquisasNet - Login</title>
    <meta name="description" content="Pesquisas Net" />
    <meta name="keywords" content="Pesquisas Net" />
    <meta name="author" content="" />
    <meta name="language" content="pt-br">
    <meta name="robots" content="index follow" />
    <meta name="viewport" content="width=1100px">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <link rel="stylesheet" href="~/css/base.css" type="text/css" />
    <link href="~/css/fontello.css" rel="stylesheet" />
    <link rel="shortcut icon" href="http://file.pesquisasnet.com/img/site/favicon.png" type="image/png">

    <!-- JQUERY -->
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>

    @*<!-- BOOTSTRAP -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- BOOTSTRAP SCRIPTS-->
    <script src="~/Scripts/bootstrap.min.js"></script>*@

</head>
<body>
    <header>
        <div class="top">
            <div class="topmenu-rs">
                <div class="toprs">
                    <ul>
                        <li><a href="https://www.facebook.com/contatopesquisasnet" target="_blank"><i class="icon-facebook"></i></a></li>
						<li><a href="#" target="_blank"><i class="icon-twitter"></i></a></li>
						<li><a href="#" target="_blank"><i class="icon-gplus"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="logo-menu">
            <div class="logo-pn"><a href="~/Pesquisa">
                <img src="http://file.pesquisasnet.com/img/site/logopn.png"></a></div>
            <div class="form-menu">
                <form action="~/Login/Logar" method="post">
                    <ul>
                        <li>
                            <label>E-mail</label>
                            <span>* E-mail não cadastrado</span>
                            <input type="text" name="Email" class="input-logar" />
                        </li>
                        <li>
                            <label>Senha</label>
                            <span>* Senha invalida</span>
                            <input type="password" name="Senha" class="input-logar" />
                        </li>
                        <li class="btn">
                            <button type="submit" class="btn-entrar">Entrar</button></li>
                    </ul>
                    <div class="esquecisenha"><a href="~/Login/EsqueciMinhaSenha">Esqueceu sua senha?</a></div>
                </form>

                @*<form class="form-inline">
                    <input type="text" class="input-small" placeholder="Email">
                    <input type="password" class="input-small" placeholder="Password">
                    <label class="checkbox">
                        <input type="checkbox"> Remember me
                    </label>
                    <button type="submit" class="btn">Sign in</button>
                </form>*@
            </div>
        </div>

    </header>

    <section>
        <div class="container">
            @RenderBody()
        </div>
    </section>

    <footer>
        <div class="footer-conteudo">
            <div class="footer-left">
                <img src="http://file.pesquisasnet.com/img/site/logopn-footer.png">
                <p><span>©</span> 2015 - Todos os direitos reservados</p>
                <p>E-mail: <a href="mailto:contatopesquisasnet@gmail.com">contatopesquisasnet@gmail.com</a></p>
            </div>
            <div class="footer-right">
                <div class="redesociais">
                    <ul>
                        <li><a href="https://www.facebook.com/contatopesquisasnet" target="_blank"><i class="icon-facebook"></i></a></li>
                        <li><a href="#" target="_blank"><i class="icon-twitter"></i></a></li>
                        <li><a href="#" target="_blank"><i class="icon-gplus"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
