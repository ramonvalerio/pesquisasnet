@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutSite.cshtml";
}

<div class="col-md-3">
    <div class="form-group">
        <img src="http://file.pesquisasnet.com/img/perfil/@ViewBag.Usuario.FotoPerfil" class="img-circle" alt="Foto do perfil" style="width:200px; height:200px;">
    </div>
</div>

<div class="col-md-9">
    <div class="panel-body">

        <div class="form-group">
            <label for="Cidade" class="col-md-2 control-label">Ativo</label>
            <div class="col-md-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" />
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="Nome" class="col-md-2 control-label">Nome</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="Titulo" placeholder="Ex.: Priscila">
            </div>
        </div>

        <div class="form-group">
            <label for="Titulo" class="col-md-2 control-label">Sobrenome</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="Titulo" placeholder="Ex.: Pereira da Silva">
            </div>
        </div>

        <div class="form-group">
            <label for="Titulo" class="col-md-2 control-label">Apelido</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="Titulo" placeholder="Ex.: Priscila">
            </div>
        </div>

        <div class="form-group">
            <label for="Resumo" class="col-md-2 control-label">Endereço</label>
            <div class="col-md-10">
                <textarea name="Resumo" rows="2" class="form-control" maxlength="80" placeholder="Ex.: Av. Nossa Senhora de Copacabana, 395, ap.1201, Copacabana, RJ"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="Titulo" class="col-md-2 control-label">Data de Nascimento</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 27/11/1981">
            </div>
        </div>

        <div class="form-group">
            <label for="Texto" class="col-md-2 control-label">Sexo</label>
            <div class="col-md-10">
                <div class="radio-inline">
                    <label>
                        <input id="Masculino" name="Sexo" type="radio" value="M" />
                        Masculino
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        <input id="Feminino" name="Sexo" type="radio" value="F" checked="checked" />
                        Feminino
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="Titulo" class="col-md-2 control-label">RG</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 127.66.835-8">
            </div>
        </div>

        <div class="form-group">
            <label for="Titulo" class="col-md-2 control-label">CPF</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="Titulo" placeholder="Ex.: 095.71.22.37-35">
            </div>
        </div>

        <div class="form-group">
            <label for="Titulo" class="col-md-2 control-label">E-mail</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="Titulo" placeholder="Ex.: pripesa@gmail.com">
            </div>
        </div>

        <div class="form-group">
            <label for="Titulo" class="col-md-2 control-label">Telefone</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="Titulo" placeholder="Ex.: (21)3970-5072">
            </div>
        </div>

        <div class="form-group">
            <label for="Cidade" class="col-md-2 control-label">Cidade</label>
            <div class="col-md-4">
                <select class="form-control">
                    <option value="RJ">Rio de Janeiro</option>
                    <option value="SP">São Paulo</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" />
                        Eu aceito os termos e condições.
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="clear"></div>
            <div class="link-edit">
                <a href="~/Perfil/Edit" class="btn-editar">Editar Perfil</a>
            </div>
        </div>
</div>

