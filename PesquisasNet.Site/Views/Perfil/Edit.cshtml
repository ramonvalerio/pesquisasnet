@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutSite.cshtml";
}

<link href="~/Scripts/dropzone/basic.min.css" rel="stylesheet" />
@*<link href="~/Scripts/dropzone/dropzone.min.css" rel="stylesheet" />*@
<script src="~/Scripts/dropzone/dropzone.min.js"></script>


<style type="text/css">
    #dropZone {
        /*background: gray;
        border: black dashed 3px;
        width: 200px;
        padding: 50px;
        text-align: center;
        color: white;*/
        width: 215px;
        height: 215px;
        border-radius: 50%;
        border: 5px solid #fff;
    }

    .dz-default dz-message {
        display: none;
    }

    .dz-preview dz-processing dz-image-preview dz-sucess dz-complete {
        display: none;
    }
</style>

<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p>
        <h4>Parabéns!</h4>
        Perfil salvo com sucesso!
    </p>
</div>

<h1>@ViewBag.Usuario.Nome @ViewBag.Usuario.SobreNome</h1>

<div class="home-conteudo">

    <div class="fotoperfil">

        @if (@ViewBag.Usuario.FotoPerfil != null)
        {
            <div class="fotoperfil">
                <img src="http://file.pesquisasnet.com/img/perfil/@ViewBag.Usuario.FotoPerfil">
            </div>
        }
        else
        {
            <form action="~/Perfil/SaveUploadedFile" method="post" enctype="multipart/form-data" class="dropzone">
                <div class="fallback">
                    <input name="file" type="file" multiple />
                    <input type="submit" value="Upload" />
                </div>
            </form>
        }
        
    </div>

    <form action="~/Perfil/Edit" method="post">
        <div class="textoperfil">
            <ul>
                <li>
                    <div class="texto01">Perfil Disponível:</div>
                    <div class="texto-respn">
                        <input type="radio" name="Ativo" value="true" checked="checked">
                        Sim |

                        <input type="radio" name="Ativo" value="false">
                        Não

                    </div>
                </li>
                <li>
                    <div class="texto01">RG:</div>
                    <div class="texto-respn">
                        <input type="text" name="Rg" class="inputperfil" placeholder="Digite somente números" value="@ViewBag.Usuario.Rg">
                    </div>
                </li>
                <li>
                    <div class="texto01">CPF:</div>
                    <div class="texto-respn">
                        <input type="text" name="Cpf" class="inputperfil" placeholder="Digite somente números" value="@ViewBag.Usuario.Cpf">
                    </div>
                </li>
                <li>
                    <div class="texto01">Data de Nascimento:</div>
                    <div class="texto-respn">
                        <input type="text" name="DataNascimento" class="inputperfil" placeholder="08/05/1983" value="@ViewBag.Usuario.DataNascimento">
                    </div>
                </li>
                <li>
                    <div class="texto01">Sexo:</div>
                    <div class="texto-respn">
                        <input type="radio" name="Sexo" value="M" checked="checked">
                        Masculino |

                        <input type="radio" name="Sexo" value="F">
                        Feminino |

                        <input type="radio" name="Sexo" value="">
